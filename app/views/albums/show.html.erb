 <div class="parallax-container">
    <div class="parallax"><img class="project-header" src="<%= @project.cover_photo_url %>"></div>
 </div>

 <div class="section">
 <div class="container albums white">
  <div class="row">
  <div class="col s12 m3 l3">
  <img class="responsive-img materialboxed" src="<%= @album.cover_art_url(:thumb) %>">
  </div>
    <div class="col s12 m9 l9">
    <div class="show-album-header">
    <a class="btn-floating btn-large waves-effect waves-light red right show-play-album">
    <i class="material-icons">play_arrow</i></a>
 	<span><h1 class="album-title"><%= @album.title %></h1> 
  <a href="/projects/<%= @project.friendly_id %>" class="card-date black-text">
  <%= @project.title %></a><br>
  <a href="#" class="card-date"> <%= pluralize(@album.tracks.count, 'Song') %></a> &#8226; 
  <a href="#" class="card-date">
  <%= @album.release_date.strftime("%Y") %></a> 
  </span>
</div>
</div>
</div>

<% if @tracks.empty?  %>
 <h5 id="no-media">No Media Found</h5>
<% else %>

<div class="row">
  <div class="col s12">
   <div class="collection">
    <% @tracks.each do |media| %>            
            <%= link_to "#{media.name}", media.file_name.url, class: "collection-item flow-text" %>
                <% end %>
    </div>
    </div>
   </div>
<% end %>
       
 	</div>
 	</div>
 	</div>
 	</div>


 	<script type="text/javascript">
  $(document).ready(function(){
    $('.materialboxed').materialbox();
  });
  $('.parallax').parallax();
  </script>




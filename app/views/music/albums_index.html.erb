<div class="section albums">
<div class="container" style="margin-bottom: 7rem;">
<div class="row">
 <div class="right">

 <ul class="collapsible" data-collapsible="accordion">
    <li>
      <div class="collapsible-header"><i class="material-icons">&#xE8EC;</i>Genres</div>
      <div class="collapsible-body genres">
      <% tag_cloud(@genres, %w(css3)) do |tag, css_class| %>
  <%= link_to tag.name, genres_path(tag.name), :class => css_class %>
  <% end %>
  </div>
    </li>
  </ul>
</div> 

<div class="left">
<h4>Albums by release date</h4>
</div>
</div>

<% if @albums.empty? %>

 	<div class="row">
 	<div class="col s12">

 	<p style="padding-left: 1rem; padding-right: 1rem;">No Albums Found.</p>
 	
 	</div>
 	</div>
<% else %>
 <h1 class="general-header"></h1>
 <div id="albums">
 <%= render 'albums_index' %>
</div>
<% end %>
</div>
<%= will_paginate @albums %>
       
   </div>
 </div>
 
<script type="text/javascript">
  $(document).ready(function(){
    $('.collapsible').collapsible();
  });
      
</script>

      
<script type="text/javascript">
  $(document).ready(function() {
  if ($('.pagination').length) {
    $(window).scroll(function() {
      var url = $('.pagination .next_page').attr('href');
      if (url && $(window).scrollTop() > $(document).height() - $(window).height() - 50) {
        $('.pagination').text("Please Wait...");
        return $.getScript(url);
      }
    });
    return $(window).scroll();
  }
});     

</script>
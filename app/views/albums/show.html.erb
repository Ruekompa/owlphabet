 <div class="parallax-container">
    <div class="parallax"><img src="<%= @project.cover_photo_url %>"></div>
 </div>
 <div class="section grey lighten-3">
 <div class="container albums white">
  <div class="row">
  <div class="col s12 m3 l3">
  <img class="responsive-img materialboxed" src="<%= @album.cover_art_url(:thumb) %>">
  </div>
    <div class="col s12 m9 l9">
 	<h1 class="album-title"><%= @album.title %></h1>

                <h4><b>Media</b></h4><hr>
       
         

              <% if @tracks.empty?  %>
                <h5 id="no-media">No Media Found</h5>
              <% else %>
              <div class="row">
                <% @tracks.each do |media| %>
                  <div class="col s12">
                    <div class="collection">
                      <%= link_to "#{media.file_name}", media.file_name.url, class: "collection-item" %>
                  
                    </div>
                  </div>
                <% end %>
                </div>
              <% end %>
       
 	</div>
 	</div>
 	</div>
 	</div>


 	<script type="text/javascript">
  $(document).ready(function(){
    $('.materialboxed').materialbox();
  });
  </script>


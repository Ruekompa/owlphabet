<div class="container white">
<div style="padding-left: 4rem; padding-right: 4rem;" class="row">
<% if @albums.empty? %>
 	<div class="row">
 	<div class="col s12">

 	<p style="padding-left: 1rem; padding-right: 1rem;">No Albums Found.</p>
 	<a style="margin-bottom: 200px; margin-left: 1rem;" href="/admin/projects/<%= @project.slug %>/albums/new" class="btn blue-grey">New Album</a>
 	
 	</div>
 	</div>
<% else %>
<div class="row">
<a class="waves-effect waves-light btn"  href="/admin/projects/<%= @project.slug %>/albums/new" style="margin-top: 1rem;">New Album</a>
</div>

<div class="section white artwork">
    <% @albums.each_slice(2) do |slice| %> 
        <div class="row">
          <% slice.each do |g| %>
          <div class="col s12 m6 l6">
          <div class="card">

          <div class="card-image waves-effect waves-block waves-light">
          <%= link_to (image_tag (g.cover_art.thumb.url), class: 'activator show-project-albums'), project_album_tracks_path(@project.friendly_id, g.friendly_id) %>
          </div> 

          <div class="card-content">
        
          <span class="flow-text activator grey-text text-darken-4"><%= g.title.titleize %><i class="material-icons right">more_vert</i>
          </span>
          </div>
          <div class="card-reveal">
      <span class="card-title grey-text text-darken-4"> <%= g.title.titleize %><i class="material-icons right">close</i></span>
      <p><a class="black-text" href="<%= project_album_tracks_path(@project.friendly_id, g.friendly_id) %>">Add Tracks </a></p>
       <p> <a href="<%= project_album_path(@project.friendly_id, g.friendly_id) %>/edit" class="black-text">Edit</a>
        </p>
    </div>
         </div>
         </div>
     <% end %>
</div>
<% end %>
</div>
<% end %>
</div>
</div>
<script type="text/javascript">
	
$( document ).ready(function() {
$('.parallax').parallax();

});
</script>
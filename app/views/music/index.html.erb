<% yield @q %>
<div class="section albums">

<div class="container" style="margin-bottom: 7rem;">
<div class="row">

<div class="right">
<%= sort_link(@q, :title, [:title, 'title asc'], '<i class="material-icons black-text">sort_by_alpha</i>'.html_safe) %>
</div>
</div>

    <% @projects.each_slice(3) do |slice| %> 
        <div class="row">
          <% slice.each do |g| %>
    <div class="col s12 m4">
	   <div class="card">
        <div class="card-image waves-effect waves-block waves-light">
       <%= link_to (image_tag (g.cover_photo.thumb.url), class: 'activator'), music_project_path(g.friendly_id) %>

        </div>
        <div class="card-content">
        <span class="card-title activator grey-text text-darken-4"> <%= g.title.titleize %></span>
        </div>
       </div>
      </div>
         <% end %>
    </div>
         <% end %>
    

   </div>

 </div>


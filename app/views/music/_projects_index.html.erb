<div class="projects">
<% @projects.each_slice(3) do |slice| %> 
        <div class="row">
          <% slice.each do |g| %>
    <div class="col s12 m4">
	   <div class="card">
        <div class="card-image waves-effect waves-block waves-light">
       <%= link_to (image_tag (g.cover_photo.thumb.url), class: 'activator'), music_project_path(g.friendly_id) %>

        </div>
         <div class="card-content">
              <p class="flow-text"><%= g.title.titleize %></p>
            </div>
       </div>
      </div>
         <% end %>
    </div>
  <% end %>
  </div>
  
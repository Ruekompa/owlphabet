<div class="container white">
<div style="padding-left: 4rem; padding-right: 4rem;" class="row">
<% if @albums.empty? %>
 	<div class="row">
 	<div class="col s12">

 	<p style="padding-left: 1rem; padding-right: 1rem;">No Albums Found.</p>
 	<a style="margin-bottom: 200px; margin-left: 1rem;" href="/admin/projects/<%= @project.slug %>/albums/new" class="btn red">New Album</a>
 	
 	</div>
 	</div>
<% else %>
 <h1 class="general-header"></h1>
<div class="section white artwork">
    <% @albums.each_slice(4) do |slice| %> 
        <div class="row">
          <% slice.each do |g| %>
          <div class="col s12 m4 l4">
          <div class="card">

          <div class="card-image waves-effect waves-block waves-light">
          <%= link_to (image_tag (g.cover_art.thumb.url), class: 'activator show-project-albums'), project_album_tracks_path(@project.friendly_id, g.friendly_id) %>
          </div>

          <div class="card-content">
        
          <span class="card-title activator grey-text text-darken-4"><%= g.title.titleize %>
          </span>
          </div>
         </div>
     <% end %>
</div>
<% end %>
</div>
<% end %>
</div>
</div>
<script type="text/javascript">
	
$( document ).ready(function() {
$('.parallax').parallax();

});
</script>
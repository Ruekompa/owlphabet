 <%= form_for @project do |f| %>
<section class="section">
<div class="container">

        <div class="col s12 m12">
          <div class="card">
            <div class="card-content">
<span class="card-title">Edit Project</span>
             <div class="row">
             <div class="col s12 m6">

             <%= image_tag(@project.cover_photo_url, :class => "responsive-img") if @project.cover_photo? %>
     
             </div>
             </div>
             <div class="row">
               <div class="file-field input-field">
                 <div class="btn blue-grey">
                 <span>Cover Photo</span>
                <%= f.file_field :cover_photo %>
                 </div>
               </div>
             </div>

           <div class="row">
             <div class="input-field col s12">
            <%= f.text_field :title, :class => "validate", :type => "text" %>
             <label for="title" class="black-text">Title</label>
            </div>
            </div>
        
          </div>
            <div class="card-action">
              <%= form_tag @project, method: :put do %>
             <%= submit_tag "Update Project", id: "update_project", class: "btn red" %>
            <% end %>

              <td><%= link_to 'Destroy Project', project_path(), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn black" %></td>
           
       
            </div>
          </div>
        </div>
      </div>
      <% end %>
</div>
</section>



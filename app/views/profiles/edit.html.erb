<%= form_for [@artist, @profile] do |f| %>

<section class="section white">
<div class="container">
<h2>Profile</h2>
        <div class="col s12 m12">
          <div class="card">
            <div class="card-content">
            
            <div class="row">
            <div class="input-field col s12">
           <p>
            <%= f.file_field :cover_photo %>
            </p>
            <p>
           <%= f.check_box :remove_cover_photo, :id => "remove_cover_photo" %>
            <label for="remove_cover_photo">
             Remove Cover
            </label>
        </p>
         </div>
         </div>
            <div class="col s12">
            <h2><%= @artist.name %></h2>
            </div>
              <div class="input-field col s12">
            <%= f.text_field :location, :class => "validate", :type => "text" %>
             <label for="title">Location</label>
            </div>

       
            <div class="card-action">
              <%= f.submit 'Submit', :class => "btn btn-waves" %>
               
            </div>
          </div>
      
        </div>
      </div>
      <% end %>
</div>
</section>



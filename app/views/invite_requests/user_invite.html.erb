<div class="section">
<div class="container">
<div class="row">
<div class="col s12">
   <h2 class="section-text center-align black-text" style="font-weight: 100;">Listener Invitation</h2>
         
</div>
</div>
    <div class="row center">
       <div class="col s12 m12 contact">
       <div class="card-panel white">     
       <div class="row">

  <div class="circle grey lighten-3" style="height: 164px; width: 164px; float: left; position: relative; left: calc(50% - 6.5rem);">
    <i class="material-icons large valign grey-text" style="float: left;
    position: relative;
    top: calc(50% - 50px);
    left: calc(50% - 45px);">headset</i>
   
    </div>
    </div>
          <%= form_for @contact, validate: true do |f| %>
          <div class="row">
          <div class="input-field col s12">
            <label class="active" for="name">Name</label>
             <%= f.text_field :name, :id => "name", :class => "validate", :type => "text" %>
          </div>
          </div>
         <div class="row">
         <div class="input-field col s12">
          <label class="active" for="email">Email</label>
          <%= f.text_field :email, :id => "email", :class => "validate", :type => "text" %>
         </div>
         </div>

           <%= f.hidden_field :invitation_type, :value => "user"%>
     
          

<div class="row center">
 
            <%= button_tag(type: 'submit', class: "waves-effect waves-light btn") do %>
              Send <i style="padding-left: 5px;" class="material-icons right">send</i>
         <% end %>
                         

   <% end %>

   </div>

   </div>
</div>
</div>
</div>
</div>
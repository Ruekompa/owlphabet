<div class="parallax-container">
    <div class="parallax"><img src="<%= @project.cover_photo_url %>"></div>
</div>


<div class="container albums white">
  <div class="row">
    <div class="col s12">
    <div class="fixed-action-btn horizontal click-to-toggle">
   <a class="btn-floating btn-large waves-effect waves-light blue-grey lighten-5 right share-project-show"><i class="material-icons black-text">share</i></a>

   <ul>
  <%= social_share_button_tag(@project.title, :popup => "true") %>
    </ul>
   </div>
 	<h1 class="project-show-title center"><%= @project.title %></h1>
 
    </div>
  </div>
</div>




<div class="container albums white">
<div style="padding-left: 4rem; padding-right: 4rem;" class="row">
<% if @albums.empty? %>
 	<div class="row">
 	<div class="col s12">

 	<p style="padding-left: 1rem; padding-right: 1rem;">No Albums Found.</p>
 	<a style="margin-bottom: 200px; margin-left: 1rem;" href="/projects/<%= @project.friendly_id %>/albums/new" class="btn red">New Album</a>
 	
 	</div>
 	</div>
<% else %>
 
<div class="section white artwork">
    <% @albums.each_slice(4) do |slice| %> 
        <div class="row">
          <% slice.each do |g| %>
          <div class="col s12 m4 l4">
          <div class="card">

          <div class="card-image waves-effect waves-block waves-light">
          <%= link_to (image_tag (g.cover_art.thumb.url), class: 'activator show-project-albums'), project_album_path(@project.friendly_id, g.friendly_id) %>
          </div>

          <div class="card-content">
          <span class="card-title activator grey-text text-darken-4"><%= g.title.titleize %>  <a class="btn-floating btn-large waves-effect waves-light red right"><i class="material-icons">play_arrow</i></a></span>
          <p><span>
          <a href="#" class="card-date"><%= @project.title %></a> &#8226; <a href="#" class="card-date"><%= g.release_date.strftime("%Y") %></a></span></p>

          </div>

          </div>
         </div>
     <% end %>
</div>
<% end %>
</div>
<% end %>
</div>
</div>
<script type="text/javascript">
	
$( document ).ready(function() {
$('.parallax').parallax();

});
</script>
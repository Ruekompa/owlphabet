  <% %>
  <li><a href="#!">Go to Artst</a></li>
  <li><a href="#!">two</a></li>
  <li class="divider"></li>
  <li><a href="#!">three</a></li>
</ul> -->
 	</div>
 	</div>
 	</div>
</div>


 	<script type="text/javascript">
  $(document).ready(function(){
    $('.materialboxed').materialbox();
  });
  $('.parallax').parallax();
  </script>

<script type="text/javascript">
  $(document).ready(function(){
    $("a.play_album_as_list").on('click',function(e){
        <% unless @tracks.nil? %>
        <% @tracks.each do |a| %>
        $(".sm2-playlist-bd").append('<li><%= link_to File.basename("#{a.title}"), "/uploads/songs/#{a.id}/#{File.basename(a.file_name.mp3.url)}", 'data-skip-pjax' => true %></li>'),
        <% end %>
                 window.sm2BarPlayers[0].actions.play(0);
        <% end %>
    });
});
</script>


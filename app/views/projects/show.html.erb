<div class="parallax-container">
    <div class="parallax"><img src="<%= @project.cover_photo_url %>"></div>
</div>

<div class="container albums white">
  <div class="row">
    <div class="col s12">
 	<h1 style="padding-left: 1rem;"><%= @project.title %></h1>
 	</div>
   </div>

<% if @albums.empty? %>
 	<div class="row">
 	<div class="col s12">

 	<p style="padding-left: 1rem; padding-right: 1rem;">No Albums Found.</p>
 	<a style="margin-bottom: 200px; margin-left: 1rem;" href="/projects/<%= @project.friendly_id %>/albums/new" class="btn red">New Album</a>
 	
 	</div>
 	</div>
<% else %>
 
<div class="section white artwork">
    <% @albums.each_slice(4) do |slice| %> 
        <div style="padding-left: 1rem;" class="row">
          <% slice.each do |g| %>
          <div class="col s12 m4 l4">
          <div class="card">

          <div class="card-image waves-effect waves-block waves-light">
          <%= link_to (image_tag (g.cover_art.thumb.url), class: 'activator'), project_album_path(@project.friendly_id, g.friendly_id) %>
          </div>

          <div class="card-content">
          <span class="card-title activator grey-text text-darken-4"><%= g.title.titleize %>  <a class="btn-floating btn-large waves-effect waves-light red right"><i class="material-icons">play_arrow</i></a></span>
          <p><span></a>
          <a href="#" class="card-date"><%= @project.title %></a> &#8226; <a href="#" class="card-date"><%= g.release_date.strftime("%Y") %></span></p>

          </div>

          </div>
         </div>
     <% end %>
</div>
<% end %>
</div>
<% end %>
</div>
<script type="text/javascript">
	
$( document ).ready(function() {
$('.parallax').parallax();

});
</script>
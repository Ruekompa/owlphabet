 <%= form_for @project do |f| %>
<section class="section">
<div class="container">
        <div class="col s12 m12">
          <div class="card">
            <div class="card-content">

             <div class="row">
             <div class="col s12 m6">

             <%= image_tag(@project.cover_photo_url, :class => "responsive-img") if @project.cover_photo? %>
     
             </div>
             </div>
             <div class="row">
               <div class="file-field input-field">
                 <div class="btn blue-grey">
                 <span>Project Cover</span>
                <%= f.file_field :cover_photo %>
                <%= f.hidden_field :cover_photo_cache %>
                 </div>
               </div>
             </div>

           <div class="row">
             <div class="input-field col s12">
               <label for="title" class="grey-text lighten-3">New Project Title</label>
            <%= f.text_field :title, :class => "validate", :type => "text" %>
            <%= f.hidden_field :artist_id, :value => current_artist.id %>
           
            </div>
            </div>
        
          </div>
            <div class="card-action">
              <%= f.submit 'Submit', :class => "btn btn-waves black" %>
           
       
            </div>
          </div>
        </div>
      </div>
      <% end %>
</div>
</section>



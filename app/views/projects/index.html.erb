
<div class="section albums">

<div class="container">
<% if @projects.empty? %>
 <p style="padding-left: 1rem; padding-right: 1rem;">No Projects Found.</p>
  <a style="margin-bottom: 200px; margin-left: 1rem;" href="/admin/projects/new" class="btn red">New Project</a>
<% else %>

 <a style="margin-bottom: 1rem; margin-left: 1rem;" href="/admin/projects/new" class="btn red">New Project</a>
    <% @projects.each_slice(3) do |slice| %> 
        <div class="row">
          <% slice.each do |g| %>
    <div class="col s12 m4">
	     <div class="card">
    <div class="card-image waves-effect waves-block waves-light">
      <%= link_to (image_tag (g.cover_photo.thumb.url), class: 'activator'), project_path(g.friendly_id) %>
    </div>
    <div class="card-content">
      <span class="flow-text activator grey-text text-darken-4"><%= g.title.titleize %><i class="material-icons right">more_vert</i></span>
    </div>
    <div class="card-reveal">
      <span class="card-title grey-text text-darken-4"> <%= g.title.titleize %><i class="material-icons right">close</i></span>
      <p> <a href="/admin/projects/<%= g.friendly_id %>/edit" class="black-text">Edit</a>
        </p>
        <p><a href="/admin/projects/<%= g.friendly_id %>" class="black-text">Albums</a></p>
    </div>
  </div>
         
      </div> 
         <% end %>
    </div>
         <% end %>
    

 </div>
 </div>
<% end %>
 
           
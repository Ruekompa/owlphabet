
<div class="section albums">

<div class="container">
    <% @projects.each_slice(4) do |slice| %> 
        <div class="row">
          <% slice.each do |g| %>
    <div class="col s12 m4">
	   <div class="card">
        <div class="card-image waves-effect waves-block waves-light">
       <%= link_to (image_tag (g.cover_photo.thumb.url), class: 'activator'), project_path(g.friendly_id) %>

        </div>

        <div class="card-content">
        <span class="card-title activator grey-text text-darken-4"> <%= g.title.titleize %></span><br>
        <a href="/projects/<%= g.friendly_id %>/edit" class="black-text">Edit</a>
        <a href="/projects/<%= g.friendly_id %>/albums" class="black-text">Albums</a>
        </div>
       </div>
      </div>
         <% end %>
    </div>
         <% end %>
    

   </div>

 </div>

